          <li>
            <a href="">
              <i class="icon-fog"></i>
              <span>Backlog</span>              
            </a>
          </li>
          <li>
            <a href="">
              <i class="icon-doc"></i>
              <span>Notes/Docs</span>
            </a>
          </li>
          <li>
            <a href="">
              <i class="icon-cog"></i>
              <span>Settings</span>
            </a>
          </li>
        </ul>
        <div class="assigned-users">
          <a href="" class="add-link">
            <i class="icon-plus"></i>
          </a>
          <a href="">
            <%= image_tag 'example3.jpg' %>
            <div class="status online"></div>
          </a>
          <a href="">
            <%= image_tag 'example2.jpg' %>
            <div class="status"></div>
          </a>
          <a href="">
            <%= image_tag 'example.jpg' %>
            <div class="status online"></div>
          </a>
          <a href="" class="more-link">
            <i class="icon-dot-3"></i>
          </a>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
