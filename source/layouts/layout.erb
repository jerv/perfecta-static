<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Perfecto" %></title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.2.0/material.blue-amber.min.css" /> 

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    <%= stylesheet_link_tag "all" %>

    <script defer src="https://code.getmdl.io/1.2.0/material.min.js"></script>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">

    <nav>
      <div class="container">
        <div class="left-content">
          <a class="nav-link profile-link mdl-js-button mdl-js-ripple-effect" href="#">
            <img src="images/example.jpg">
            <span>Adam Whitney</span>
          </a>
        </div>
        <a href="" class="nav-logo">
          <img src="images/little-logo.png">
          <img src="images/jelly-logo.png" class="mobile-logo">
        </a>
        <div class="right-content">
          <a id="actionsDropdown" class="nav-link actions-link mdl-button mdl-js-button mdl-js-ripple-effect" href="#">
            <img src="images/action-icon.png"><span> My Actions</span>
          </a>
          <ul class="mdl-menu actions-dropdown mdl-with-content mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
              for="actionsDropdown">
            <li>
              <a href="" class="clear-link">
                <i class="icon-ok"></i> Clear All
              </a>
            </li>
            <li>
              <a href="">
                This could be an example of a <strong>Action</strong> Message.
              </a>
            </li>
            <li>
              <a href="">
                An example of a <strong>Action</strong> Text.
              </a>
            </li>
            <li>
              <a href="">
                This is a <strong>Action</strong> Message.
              </a>
            </li>
            <li>
              <a href="" class="view-link">
                <i class="icon-menu"></i> View All Actions
              </a>
            </li>
          </ul>
          <a id="notificationsDropdown" class="nav-link notifications-link empty mdl-button mdl-js-button mdl-js-ripple-effect" href="#">
            <i class="icon-bell"></i>
          </a>
          <ul class="mdl-menu actions-dropdown mdl-with-content mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
              for="notificationsDropdown">
            <li>
              <a href="" class="clear-link">
                <i class="icon-ok"></i> Clear All
              </a>
            </li>
            <li>
              <a href="">
                An example of a <strong>Notification</strong> Message
              </a>
            </li>
            <li>
              <a href="">
                This could be an example of a <strong>Notification</strong> Message
              </a>
            </li>
            <li>
              <a href="">
                A <span class="u-blue">Person</span> did a <strong>thing</strong>.
              </a>
            </li>
            <li>
              <a href="">
                <span class="u-blue">John Doe</span> did a thing to <strong>Project Zero</strong>.
              </a>
            </li>
            <li>
              <a href="" class="view-link">
                <i class="icon-menu"></i> View All Notifcations
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="m-subnav">
      <div class="container">
        <ul class="list-items">
          <li>
            <button id="project-select" href="" class="projects-link mdl-button mdl-js-button mdl-js-ripple-effect">
              <i class="icon-clone"></i> 
              <span>Launchpad Co </span>
              <i class="icon-down-open"></i>
            </button>
            <ul class="projects-dropdown mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect"
                for="project-select">
              <li class="mdl-menu__item">Other Project Name</li>
              <li class="mdl-menu__item">Last Project</li>
              <li class="mdl-menu__item"><i class="icon-plus"></i> Add New</li>
            </ul>
          </li>
          <li>
            <a href="" class="mdl-button mdl-js-button mdl-js-ripple-effect">
              <i class="icon-newspaper"></i>
              <span>Epics</span> 
            </a>
          </li>
          <li>
            <a href="" class="mdl-button mdl-js-button mdl-js-ripple-effect active">
              <i class="icon-docs"></i>
              <span>Kan Ban</span>
            </a>
          </li>
          <li>
            <a href="" class="mdl-button mdl-js-button mdl-js-ripple-effect">
              <i class="icon-fog"></i>
              <span>Backlog</span>              
            </a>
          </li>
          <li>
            <a href="" class="mdl-button mdl-js-button mdl-js-ripple-effect">
              <i class="icon-doc"></i>
              <span>Notes/Docs</span>
            </a>
          </li>
          <li>
            <a href="" class="mdl-button mdl-js-button mdl-js-ripple-effect">
              <i class="icon-cog"></i>
              <span>Settings</span>
            </a>
          </li>
        </ul>
        <div class="assigned-users">
          <a id="assignedUserAdd" href="" class="add-link">
            <i class="icon-plus"></i>
          </a>
          <div class="mdl-tooltip" data-mdl-for="assignedUserAdd">
            Add User to Project
          </div>
          <a href="">
            <%= image_tag 'example3.jpg' %>
            <div class="status online"></div>
          </a>
          <a href="">
            <%= image_tag 'example2.jpg' %>
            <div class="status"></div>
          </a>
          <a href="">
            <%= image_tag 'example.jpg' %>
            <div class="status online"></div>
          </a>
          <a id="assignedUserOptions" href="" class="more-link">
            <i class="icon-dot-3"></i>
          </a>
          <div class="mdl-tooltip" data-mdl-for="assignedUserOptions">
            Manage Users
          </div>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
