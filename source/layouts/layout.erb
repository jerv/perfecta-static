<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Perfecto" %></title>

    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,700,900" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">

    <nav>
      <div class="container">
        <div class="left-content">
          <a class="nav-link projects-link" href="#">
            My Projects <i class="fa fa-caret-down"></i>
          </a>
          <a class="nav-link" href="#">
            My Actions
          </a>
        </div>
        <a href="" class="nav-logo">
          <%= image_tag 'little-logo.png' %>
        </a>
        <div class="right-content">
          <a class="nav-link notifications-link empty" href="#">
            <i class="fa fa-bell-o"></i>
          </a>
          <a class="nav-link profile-link" href="#">
            Adam Whitney
            <%= image_tag 'example.jpg' %>
          </a>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
